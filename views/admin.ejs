<body>
    <%- include("partials/header") %>

 
    <form class="mb-4 form-modal">
       
                Are you sure you want to delete this user? 
                <div>
                <button onclick="deleteUser()">Yes</button> <button>No</button>     
                </div>
                
               
            </form>

    <h1 class="admin-h1">ADMIN PAGE </h1>
    <div class="table-container">
    <table>
        <thead>
            <tr class="admin-th">
                <th>Full Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Phone No</th>
                <th>DOB</th>
                <th>Deposit</th>   
                <th>Profit</th>              
                <th>Total</th>
                <th>Actions</th>
                <th></th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.fullname %></td>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td><%= user.phoneNo %></td>
                    <td><%= user.dob %></td>
                    <td>
                        <span class="display-<%= user._id %>"><%= user.deposit %></span>
                        <input type="number" id="deposit-input-<%= user._id %>" class="edit-<%= user._id %>" value="<%= user.deposit %>" style="display:none;">
                    </td>
                    
                    <td>
                        <span class="display-<%= user._id %>"><%= user.profit %></span>
                        <input type="number" id="profit-input-<%= user._id %>" class="edit-<%= user._id %>" value="<%= user.profit %>" style="display:none;">
                    </td>
                    <td><%= user.deposit + user.profit %></td>
                    <td>
                        <button onclick="toggleEditField(`<%= user._id %>`)">Edit</button>
                    </td>
                    <td>
                        <button class="edit-<%= user._id %>" style="display:none;" onclick="saveChanges('<%= user._id %>')">Save</button>
                    </td>
                    <td>
                        <button onClick = "newVal('<%= user._id %>')">Delete</button>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
